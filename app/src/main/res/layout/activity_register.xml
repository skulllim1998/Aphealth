<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEBEF"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/img_patient"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:srcCompat="@drawable/register" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#00539C"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="1dp"/>


    <EditText
        android:id="@+id/tv_email_patient"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"
        android:paddingLeft="20dp"
        android:text="Email"
        android:textColor="#00539C"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_password_patient"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"
        android:paddingLeft="20dp"
        android:text="Password"
        android:textColor="#00539C"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_name_patient"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"
        android:paddingLeft="20dp"
        android:text="Name"
        android:textColor="#00539C"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_phone_patient"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"
        android:paddingLeft="20dp"
        android:text="Phone"
        android:textColor="#00539C"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_address_patient"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"
        android:paddingLeft="20dp"
        android:text="Address"
        android:textColor="#00539C"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_register_patient"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Register"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold" />


</LinearLayout>