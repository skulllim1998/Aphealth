<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_appointment"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_margin="6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_gravity="center"
        android:checkable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_appointment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Date"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_toEndOf="@+id/tv_appointment_date"
                android:text="Time"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_appointment_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_toEndOf="@+id/tv_appointment_time"
                android:text="Doctor"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_appointment_specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_below="@+id/tv_appointment_date"
                android:text="Specialist"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_appointment_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_below="@+id/tv_appointment_time"
                android:layout_toEndOf="@+id/tv_appointment_specialist"
                android:text="Location"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_below="@id/tv_appointment_location"
                android:backgroundTint="@color/red_500"
                android:text="Cancel" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>