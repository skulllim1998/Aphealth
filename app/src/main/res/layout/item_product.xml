<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_product"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardBackgroundColor="@color/white"
        android:checkable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="105dp"
                android:layout_height="120dp"
                android:src="@drawable/medical1"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr name"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/tv_pills_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialist"
                android:textColor="@color/black"
                android:layout_below="@id/tv_name_product"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/tv_final_price_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/tv_pills_product"/>

            <TextView
                android:id="@+id/tv_final_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experiences"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/tv_final_price_product_title"/>

            <TextView
                android:id="@+id/tv_price_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patients"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/tv_final_price_product"/>

            <TextView
                android:id="@+id/tv_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of patient"
                android:layout_below="@id/tv_price_product_title"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>