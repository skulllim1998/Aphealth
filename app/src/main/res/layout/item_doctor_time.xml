<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_doctor_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/linear_layout_doctor_confirm_time"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_doctor_confirm"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_doctor_confirm_center"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_name_doctor_confirm"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Time"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>



        </LinearLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content">



        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>